<Window x:Class="DocumentFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentFinder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="btnFind" Content="Start Finding" Height="50" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click"></Button>
            <RadioButton Margin="10,10,0,13" Name="ocrOption" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="15">
                Use OCR for PDF
            </RadioButton>
            <Button Name="btnConvert" Content="Convert" Height="50" Width="100" VerticalAlignment="Top" HorizontalAlignment="Center" Click="Button_Click1"></Button>
            <Button Name="btnSearch" Content="Search Text" Height="50" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click2"></Button>
            <TextBox Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" Name="searchTb"></TextBox>
            <TextBox Height="160" Width="500" HorizontalAlignment="Center" VerticalAlignment="Bottom" Name="tb1" VerticalScrollBarVisibility="Auto"></TextBox>
        </StackPanel>
    </Grid>
</Window>
